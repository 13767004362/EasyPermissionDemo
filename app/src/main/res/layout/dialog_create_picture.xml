<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/shape_create_picture_dialog">
    <TextView
        android:id="@+id/dialog_create_picture_careme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="拍照"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ededed"/>
    <TextView
        android:id="@+id/dialog_createpicture_photoalbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textSize="17sp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:text="相册"
        android:textColor="#333333"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ededed"/>
    <TextView
        android:id="@+id/dialog_createpicture_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="取消"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#e68f17"
        android:gravity="center"/>

</LinearLayout>